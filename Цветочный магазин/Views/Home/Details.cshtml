@model Цветочный_магазин.Models.Flower

@{
    ViewBag.Title = "Details";
}

<h2>Подробно</h2>
<!--================Single Product Area =================-->
<div class="product_image_area">
    <div class="container">
        <div class="row s_product_inner">
            <div class="col-lg-6">
                <div class="owl-carousel owl-theme s_Product_carousel">
                    <div class="single-prd-item">
                        <img class="img-fluid" src=@Url.Content("~/Content/userfiles/"+ Model.image) alt="">
                    </div>
                </div>
            </div>
            <div class="col-lg-5 offset-lg-1">
                <div class="s_product_text">
                    <h3>@Model.type</h3>
                    <h3>@Model.name</h3>
                    <h2>@Model.price руб.</h2>
                    <ul class="list">
                        @if (Model.availability > 0)
                        {
                        <li><span>@Model.availability шт.</span> : В наличии </li>
                        }
                        else
                        {
                        <li><span>@Model.availability шт.</span> : Нету в наличии </li>
                        }
                    </ul>
                    <p>
                       @Model.description
                    </p>
                    <div class="product_count">
                        <p>
                            @if (Model.availability > 0)
                            {
                                @Html.ActionLink("Купить", "Create", "Orders", new { id = Model.id }, new { @class = "button primary-btn" })
                            }
                            @Html.ActionLink("Вернуться назад", "Index", "Home", null, new { @class = "button primary-btn" })
                            </p>
                </div>
            </div>
        </div>
    </div>
</div>
    </div>
<!--================End Single Product Area =================-->